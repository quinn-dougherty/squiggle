// A launch configuration that compiles the extension and then opens it inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run VS Code Extension",
      "type": "extensionHost",
      "request": "launch",
      "cwd": "${workspaceFolder}/packages/vscode-ext",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/packages/vscode-ext"
      ],
      "outFiles": ["${workspaceFolder}/packages/vscode-ext/out/**/*.js"],
      "preLaunchTask": "Build VS Code extension"
    }
  ]
}
