{
  "compilerOptions": {
    // build settings
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "es2021",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "composite": true,
    "outDir": "./dist",
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": true,
    "preserveConstEnums": true,
    // type check settings
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": false // waiting for https://github.com/lezer-parser/lezer/issues/41 to be fixed
  },
  "include": ["src/**/*"],
  "references": [
    { "path": "../squiggle-lang" },
    { "path": "../ui" },
    { "path": "../prettier-plugin" }
  ]
}
